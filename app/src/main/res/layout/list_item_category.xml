    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:src="@drawable/askdial_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="askdial"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_company_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_name"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="Jayanagar"
                    android:paddingLeft="10dp"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textview_company_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_area"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="9164540000"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textview_company_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_mobile"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="askdial.com"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


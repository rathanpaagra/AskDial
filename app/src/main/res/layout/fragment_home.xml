
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="in.askdial.askdial.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/prajwal_marketing"
                    android:text="Prajwal Marketing"

                    android:textColor="@color/blue700"
                    tools:background="@android:color/holo_orange_light"></ImageView>

                <!--<ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="125dp"
                    android:src="@drawable/prajwal_marketing"

                    android:layout_height="match_parent"
                    android:text="Prajwal Marketing"
                    android:textColor="@color/blue700"
                    tools:background="@android:color/holo_orange_light"></ImageView>-->

                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/celebrate_parlours"
                    android:text="Celebratelife"

                    android:textColor="@color/blue700"
                    tools:background="@android:color/holo_orange_light">

                </ImageView>

                <ImageView
                    android:id="@+id/imgView3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.90"
                    android:src="@drawable/ascent_elevators"
                    android:text="Ascent"

                    android:textColor="@color/blue700"
                    tools:background="@android:color/holo_orange_light">

                </ImageView>
            </LinearLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recyclerview_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </android.support.v7.widget.CardView>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="56dp"></WebView>

    <TextView
        android:id="@+id/tv_classifieds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CLASSIFIEDS" />

</LinearLayout>
</ScrollView>
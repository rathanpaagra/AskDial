    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/clasiified_image"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_preview_300_150" />
                <!--<ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/askdial_logo" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cls_textview_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="askdial"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cls_textview_company_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_name"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="Jayanagar"
                    android:paddingLeft="10dp"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cls_textview_company_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_area"
                    android:layout_toRightOf="@id/imageView"
                    android:hint="9123456789"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cls_textview_company_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="@id/imageView"
                    android:layout_below="@id/textview_company_mobile"
                    android:layout_toRightOf="@id/imageView"
                    android:ellipsize="end"
                    android:hint="xyz.com"
                    android:maxEms="8"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="14dp" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

